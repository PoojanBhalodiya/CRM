const Notify = require("../model/notifymodel");

const notifyCtrl = {
  createNotify: async (req, res) => {
    if (
      req.body.title &&
      req.body.desc &&
      req.body.image &&
      req.body.datetime
    ) {
      const notify = new Notify({
        title: req.body.title,
        desc: req.body.desc,
        image: req.body.image,
        datetime: req.body.datetime,
      });
    } else {
      try {
        const savedNotify = await Notify.save();
        res.status(200).json({
          statusCode: 1,
          responseData: {
            status: true,
            message: "notification is created",
            notify: savedNotify,
          },
        });
      } catch (err) {
        res.status(400).json({
          statusCode: 1,
          responseData: {
            status: false,
            message: err.message,
          },
        });
      }
    }
  },
};
module.exports = notifyCtrl;
